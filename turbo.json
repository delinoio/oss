{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "dependsOn": [
        "build:api"
      ],
      "cache": false,
      "persistent": true
    },
    "build:api":{
      "dependsOn": [
        "^build:api"
      ],
      "inputs": [
        ".env",
        "src/**",
        "**/*.proto",
        "**/*.go",
        "**/*.ts",
        "**/*.mts",
        "**/*.tsx",
        "tsconfig.json",
        "!**/e2e/",
        "!.next/**",
        "!*/**/*.test.ts",
        "!*/**/*.test.tsx",
        "!*/**/*.e2e.ts",
        "!*/**/*.e2e.tsx",
        "!*/**/*.cy.ts"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "build":{
      "dependsOn": [
        "build:api"
      ],
      "inputs": [
        ".env",
        "src/**",
        "**/*.proto",
        "**/*.go",
        "**/*.ts",
        "**/*.mts",
        "**/*.tsx",
        "tsconfig.json",
        "!**/e2e/",
        "!.next/**",
        "!*/**/*.test.ts",
        "!*/**/*.test.tsx",
        "!*/**/*.e2e.ts",
        "!*/**/*.e2e.tsx",
        "!*/**/*.cy.ts"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "test": {},
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    }
  }
}